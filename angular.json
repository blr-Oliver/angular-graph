{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "simple-web-example": {
      "root": "",
      "sourceRoot": "src/ng",
      "projectType": "application",
      "prefix": "web-ex",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "src/main/resources/static",
            "index": "src/ng/index.html",
            "main": "src/ng/main.ts",
            "polyfills": "src/ng/polyfills.ts",
            "tsConfig": "tsconfig.json",
            "assets": [
              "src/ng/assets"
            ],
            "styles": [
              "src/ng/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/ng/environments/environment.ts",
                  "with": "src/ng/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "simple-web-example:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "simple-web-example:build:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": "tsconfig.json",
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "simple-web-example"
}
